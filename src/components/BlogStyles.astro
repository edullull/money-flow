<style is:global>
    :root {
      --bg-color: #f8fafc; /* Gris azulado muy claro */
      --card-bg: #ffffff;
      --accent-blue: #3b82f6; /* Azul moderno */
      --accent-green: #10b981;
      --accent-red: #ef4444;
      --text-main: #1e293b; /* Azul oscuro para texto */
      --text-muted: #64748b;
      --border-color: #e2e8f0;
    }
  
    /* RESET Y BASE */
    html, body {
      margin: 0;
      padding: 0;
      background-color: var(--bg-color);
      color: var(--text-main);
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      min-height: 100vh;
    }
  
    body {
      background-image: 
        radial-gradient(at 0% 0%, rgba(59, 130, 246, 0.05) 0px, transparent 50%),
        radial-gradient(at 100% 0%, rgba(16, 185, 129, 0.05) 0px, transparent 50%);
      padding: 1rem;
      box-sizing: border-box;
    }
  
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 1rem;
    }
  
    /* CABECERA */
    .header {
      text-align: center;
      margin-bottom: 3rem;
      padding-top: 2rem;
    }
  
    .top-label {
      color: var(--accent-blue);
      font-weight: 700;
      letter-spacing: 1px;
      font-size: 0.75rem;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }
  
    h1 {
      font-size: 3.5rem;
      margin: 0.5rem 0;
      font-weight: 800;
      color: var(--text-main);
    }
  
    /* GRID PRINCIPAL */
    .main-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      align-items: start;
    }
  
    @media (min-width: 900px) {
      .main-grid {
        grid-template-columns: 350px 1fr;
      }
    }
  
    /* TARJETAS (CARDS) */
    .blog-card {
      background-color: var(--card-bg);
      border-radius: 16px;
      border: 1px solid var(--border-color);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
      transition: all 0.2s ease;
    }
  
    .blog-card:hover {
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      border-color: #cbd5e1;
    }
  
    /* FORMULARIO */
    .form-layout {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  
    .input-field {
      background: #ffffff;
      border: 1px solid #d1d5db;
      border-radius: 10px;
      padding: 0.75rem 1rem;
      color: var(--text-main);
      width: 100%;
      box-sizing: border-box;
      font-size: 0.95rem;
      transition: all 0.2s;
    }
  
    .input-field:focus {
      outline: none;
      border-color: var(--accent-blue);
      ring: 2px solid rgba(59, 130, 246, 0.2);
    }
  
    /* BOTÃ“N */
    .publish-button {
      background-color: var(--text-main);
      color: #ffffff;
      border: none;
      padding: 1rem;
      border-radius: 10px;
      font-weight: 700;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.2s;
    }
  
    .publish-button:hover {
      background-color: #0f172a;
      transform: translateY(-1px);
    }
  
    /* UTILIDADES */
    .text-success { color: var(--accent-green); }
    .text-danger { color: var(--accent-red); }
  </style>